<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kunal.myapplication.MainActivity"
    android:background="@drawable/spongebob1"
    android:gravity="top"
    android:id="@+id/n">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Correct"
        android:id="@+id/button"
        android:onClick="onCorrectClick"
        android:background="#ecc015"
        android:layout_marginTop="101dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:id="@+id/button2"
        android:onClick="onIncorrectClick"
        android:text="Incorrect"
        android:background="#ecc015"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="next"
        android:id="@+id/button3"
        android:onClick="onButtonClick"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ecc015" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="1"
        android:editable="false"
        android:background="@null"
        android:layout_marginTop="65dp"
        android:textSize="35dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Is this number prime or not ? "
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:textSize="30dp"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

</RelativeLayout>
